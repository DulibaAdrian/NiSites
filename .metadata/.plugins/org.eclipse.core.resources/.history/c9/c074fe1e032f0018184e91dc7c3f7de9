package mapper;

import entities.domain.User;
import ma.glasnost.orika.MapperFactory;
import ma.glasnost.orika.impl.DefaultMapperFactory;

public class Mapper {
	public static MapperFactory mapperFactory = new DefaultMapperFactory.Builder().build()
			.classMap(User.class, User.class).field("id", "id").field("name", "name").field("email", "email")
			.field("password", "password").field("creationDate", "creationDate").byDefault();
	;

	public Mapper() {
	}

	public MapperFactory setUserMapping() {
		mapperFactory.classMap(User.class, User.class).field("id", "id").field("name", "name").field("email", "email")
				.field("password", "password").field("creationDate", "creationDate").byDefault().register();
		return mapperFactory;
	}
}
