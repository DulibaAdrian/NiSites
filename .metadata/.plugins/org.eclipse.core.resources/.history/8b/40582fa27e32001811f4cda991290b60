package repository.implementations;

import java.util.UUID;

import javax.persistence.EntityManager;
import javax.persistence.PersistenceContext;
import javax.persistence.Query;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.stereotype.Repository;
import org.springframework.transaction.annotation.Transactional;
import entities.domain.User;
import repository.interfaces.IuserRepositoryCustom;


@Repository
@Transactional(readOnly = true)
public class UserRepositoryImpl implements IuserRepositoryCustom , JpaRepository<User, Integer>{

	@PersistenceContext
    EntityManager entityManager;
    @Override
	public User getUserById(UUID uuid) {
		
	        Query query = entityManager.createNativeQuery("SELECT * FROM nisitesdb.user" +
	                "WHERE id = " + uuid, User.class);
	        return (User) query.getSingleResult();
	}
}
